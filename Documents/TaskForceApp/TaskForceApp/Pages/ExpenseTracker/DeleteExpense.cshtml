@page
@model TaskForceApp.Pages.ExpenseTracker.DeleteExpenseModel
@{
}
<br />
<h2>Delete Expense</h2>
@if (Model.ErrorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
@if (Model.SuccessMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.SuccessMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <div class="form-group">
        <label class="col-sm-3 col-form-label"> ID</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="ID" value="@Model.AllInfo.ID" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.AllInfo.description" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 col-form-label">Income Amount</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="income" value="@Model.AllInfo.expense" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 col-form-label">Account</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="account" value="@Model.AllInfo.account" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/ExpenseTracker/Index" role="button">Cancel</a>
        </div>
    </div>
</form>

