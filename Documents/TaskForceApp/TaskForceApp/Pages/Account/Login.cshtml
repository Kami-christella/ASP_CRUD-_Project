@page
@model TaskForceApp.Pages.Account.LoginModel
@{
}
@{
    ViewData["Title"] = "Log In";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center mb-4">Log In</h2>
                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="Email" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Log In</button> </br></br>
                        <a class="btn btn-primary btn-lg mx-2" href="/Account/ForgotPassword">Click here If you Forgot Password</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
